@model AnimeWebSite.Models.Registration

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/Styles.css" rel="stylesheet" type="text/css"/>
    <meta charset="UTF-8">
    <title>ClownS</title>
    <link rel="shortcut icon" href="">
</head>

<body>
<form asp-controller="Auth" asp-action="Registration" asp-antiforgery="true">
    <section class="login_main">
        <div class="container">
            <div class="page_for_enter">
                <div class="enter_to_account">Создать аккаунт</div>
                <div class="log_fields">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <input class="login_field" type="text" placeholder="Логин*" asp-for="Email">
                    <input class="password_field" type="text" placeholder="Имя пользователя*" asp-for="Nickname">
                    <input class="password_field" type="password" placeholder="Пароль*" asp-for="Password">
                    <input class="password_field" type="password" placeholder="Подтвердить пароль*" asp-for="ConfirmPassword">
                </div>
                <div class="btns">
                    <button type="submit" class="register_1">Зарегистрироваться</button>
                </div>
            </div>
        </div>
    </section>
</form>

</body>
</html>